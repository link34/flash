<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>flash</display-name>
	<welcome-file-list>
		<welcome-file>home.xhtml</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>FacesServlet</display-name>
		<servlet-name>FacesServlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<context-param>
		<param-name>flash.topblog.size</param-name>
		<param-value>10</param-value>
	</context-param>

	<context-param>
		<param-name>flash.bloglist.size</param-name>
		<param-value>2</param-value>
	</context-param>

	<servlet-mapping>
		<servlet-name>FacesServlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<security-role>
		<role-name>Admin</role-name>
	</security-role>
	<security-role>
		<role-name>Member</role-name>
	</security-role>
	
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>flashSecurity</realm-name>
		<form-login-config>
			<form-login-page>/home.xhtml</form-login-page>
			<form-error-page>/home.xhtml</form-error-page>
		</form-login-config>
	</login-config>
	
	<security-constraint>
		<display-name>Flash App Security</display-name>
		<web-resource-collection>
			<web-resource-name>Member Pages</web-resource-name>
			<url-pattern>/user/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Member</role-name>
		</auth-constraint>
	</security-constraint>

	<context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

</web-app>